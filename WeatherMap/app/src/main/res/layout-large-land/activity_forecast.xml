<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.gleb.manyagin.weathermap.activities.ForecastActivity"
    android:focusableInTouchMode="false"
    android:backgroundTintMode="screen"
    android:background="@drawable/cityweatherbackground">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dolgoprudny"
        android:id="@+id/cityText"
        android:textStyle="normal|bold"
        android:textSize="50sp"
        android:textAlignment="gravity"
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_marginTop="12sp"
        android:textColor="#ffffc600" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8Â°C"
        android:textSize="50sp"
        android:id="@+id/temperature"
        android:textAlignment="gravity"
        android:gravity="right"
        android:layout_marginTop="12sp"
        android:layout_below="@+id/cityText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffc600"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/iconTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp"
        tools:text="O"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_below="@+id/temperature"
        android:layout_marginTop="12sp"
        android:textColor="#ffffc600"
        android:textStyle="bold"
        android:textIsSelectable="true" />

    <ListView
        android:id="@+id/weatherListData"
        android:layout_below="@+id/iconTextView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:layout_alignParentStart="false" />
</RelativeLayout>
